<h1>List of Articles</h1>
<table>
  <tr>
    <td>Title</td>
    <td>Text</td>
    <td></td>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New article', new_article_path %>
