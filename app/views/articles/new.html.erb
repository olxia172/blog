<h1>New Article</h1>


<%= form_for @article do |f| %>
  <% @article.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
